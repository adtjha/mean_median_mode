doctype html
html(lang='en')
	head
		meta(charset='UTF-8')
		meta(http-equiv='X-UA-Compatible' content='IE=edge')
		meta(name='viewport' content='width=device-width, initial-scale=1.0')
		script(src='https://cdn.tailwindcss.com')
		title Login
	body.bg-gray-300.w-screen.h-screen.overflow-hidden.flex.items-center.justify-center
		form.w-80.h-fit.px-6.py-4.gap-4.bg-white.rounded-2xl.shadow-md.flex.flex-col.items-center.justify-start.text-xl.font-bold(action='/login' method='post')
			h1.w-full.text-center.text-4xl.font-bold Sign In
			if	error
				h1.w-full.text-center.text-red-500.font-bold #{error}
			div
				label(for='mail') Email
				input#mail.mt-1.px-2.py-1.block.w-full.rounded-md.border.border-gray-300.shadow-sm(class='focus:border-gray-300 focus:ring focus:ring-gray-200 focus:ring-opacity-50' type='email' name='mail')
			div
				label(for='password') Password
				input#password.mt-1.px-2.py-1.block.w-full.rounded-md.border.border-gray-300.shadow-sm(class='focus:border-gray-300 focus:ring focus:ring-gray-200 focus:ring-opacity-50' type='password' name='password')
			.mt-4.w-full.flex.flex-row.items-center.justify-around
				a(href='/register')
					button.text-black.border-2.border-gray-300.bg-transparent.font-medium.rounded-lg.text-sm.px-5.text-center.inline-flex.items-center(type='button' class='hover:bg-gray-200 focus:ring-4 focus:outline-none focus:ring-gray-300 py-2.5 dark:bg-gray-600 dark:hover:bg-gray-700 dark:focus:ring-gray-800')
						| Register
				button.text-white.bg-blue-700.font-medium.rounded-lg.text-sm.px-5.text-center.inline-flex.items-center.mr-2(class='hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 py-2.5 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800' type='submit')
					| Login
					svg.h-5.w-5.ml-2.-mr-1(xmlns='http://www.w3.org/2000/svg' viewBox='0 0 20 20' fill='currentColor')
						path(fill-rule='evenodd' d='M3 3a1 1 0 011 1v12a1 1 0 11-2 0V4a1 1 0 011-1zm7.707 3.293a1 1 0 010 1.414L9.414 9H17a1 1 0 110 2H9.414l1.293 1.293a1 1 0 01-1.414 1.414l-3-3a1 1 0 010-1.414l3-3a1 1 0 011.414 0z' clip-rule='evenodd')
